# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

account         uu
host            localhost
port            1025
tls             off
from            j.korbmacher@uu.nl
user            j.korbmacher@uu.nl
auth            plain
passwordeval    "pass login.uu.nl | sed -n 's/^pass: //p'"


account         lm
host            localhost
port            1025
tls             off
from            logische.methoden@uu.nl
user            j.korbmacher@uu.nl
auth            plain
passwordeval    "pass login.uu.nl | sed -n 's/^pass: //p'"

account         gmail
host            smtp.gmail.com
port            465
tls_starttls    off
from            jkorbmacher@gmail.com
user            jkorbmacher
auth            plain
passwordeval    "pass accounts.google.com | sed -n 's/^app: //p'"

account default : uu
